{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "LotteryGameSettings": {
    "MinNumberOfPlayers": 10,
    "MaxNumberOfPlayers": 15,
    "MinNumberOfTicketsPerPlayer": 1,
    "MaxNumberOfTicketsPerPlayer": 10,
    "PlayerStartingBalance": 1000,
    "CostPerTicket": 100,
    "PrizeSettings": [
      {
        "Name": "Grand Prize",
        "NumberOfWinningTickets": 1,
        "PrizeShare": 0.5
      },
      {
        "Name": "Second Tier",
        "PercentageOfWinningTickets": 0.1,
        "PrizeShare": 0.3
      },
      {
        "Name": "Third Tier",
        "PercentageOfWinningTickets": 0.2,
        "PrizeShare": 0.1
      }
    ]
  }
}